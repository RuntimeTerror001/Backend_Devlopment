<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>All Users</title>

  <!-- Tailwind CDN -->
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="min-h-screen bg-zinc-900 text-white p-10">

  <div class="max-w-7xl mx-auto bg-zinc-950 p-6 rounded-xl border border-zinc-800">
    
    <!-- NAV -->
    <div class="mb-6">
      <a href="/" class="text-blue-500 hover:underline">‚Üê Back to Home</a>
    </div>

    <h1 class="text-2xl font-semibold mb-6">All Users</h1>

    <!-- USERS CONTAINER (FLEX WRAP) -->
    <div class="flex flex-wrap gap-6 justify-start">

      <% if (users.length === 0) { %>
        <p class="text-zinc-400">No users found.</p>
      <% } %>

      <% users.forEach(user => { %>
        <!-- USER CARD -->
        <div class="w-72 shrink-0 p-5 bg-zinc-800 rounded-lg">

          <!-- IMAGE -->
          <img
            src="<%= user.image %>"
            alt="User Image"
            class="w-full h-40 object-cover rounded-lg mb-4"
            onerror="this.src='https://i.pravatar.cc/300'"
          />

          <!-- NAME -->
          <h3 class="text-xl font-medium tracking-tight">
            <%= user.name %>
          </h3>

          <!-- EMAIL -->
          <p class="text-zinc-400 text-sm">
            <%= user.email %>
          </p>

          <!-- ACTIONS -->
          <div class="flex gap-4 mt-4 text-sm">
            <a href="#" class="text-blue-400 hover:underline">Edit</a>
            <a href="/delete/<%= user._id %>" class="text-red-400 hover:underline">
              Delete
            </a>
          </div>

        </div>
      <% }) %>

    </div>

  </div>

</body>
</html>
